(rule
 (target closurewrapper.exe)
 (deps closurewrapper/main.rs)
 (action
  (chdir
   closurewrapper
   (run rustc main.rs -o "../closurewrapper.exe"))))

(rule
 (target closurewrapper.ml)
 (deps closurewrapper.exe)
 (action
  (run ocaml-embed-file closurewrapper.exe -output closurewrapper)))

(env
 (dev
  (flags
